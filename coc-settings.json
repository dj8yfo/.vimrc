{
        "diagnostic.displayByAle": true,
        "coc.preferences.extensionUpdateCheck": "never",
        "languageserver": {
                "ccls": {
                        "command": "ccls",
                        "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
                        "rootPatterns": [".ccls-root", "compile_commands.json"],
                        "initializationOptions": {
                                "cache": {
                                        "directory": ".ccls-cache"
                                },
                                "client": {
                                        "snippetSupport": true
                                }
                        }
                }
        }
}
